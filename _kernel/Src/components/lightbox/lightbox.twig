<div class="uk-child-width-1-{{ column }}@m" uk-grid uk-lightbox="animation: {{ animation }}">
    {% for item in data %}
    <div>
        <a class="uk-inline" href="{{ item.thumbnail }}" data-caption="{{ item.description }}">
            <img src="{{ item.img }}" width="{{ item.width }}" height="{{ item.height }}" alt="{{ item.alt }}">
        </a>
    </div>
    {% endfor %}
</div>